<h1>記事一覧</h1>

<br/><input id='name_keyword' type='text'><input id='name_keyword_search'type='button' value='Name 絞り込み'>
<%= javascript_tag :defer => 'defer' do -%>
  $("#name_keyword_search").click(function(e){
    $.get("posts/search", { name: $('#name_keyword').val() },
      function(data) {
        $("#result").html(data)
    });
  });
<% end -%>

<div id='result'>
	<%= render partial: 'result_table' %>
</div>

<%= link_to '新しい記事', new_post_path %>

